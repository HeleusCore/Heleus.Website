@{
    ViewData["P1"] = await Model.ReadMarkDownAsync(Model.AppInfo.Name + "/p1");
    ViewData["P2"] = await Model.ReadMarkDownAsync(Model.AppInfo.Name + "/p2");
    ViewData["P3"] = await Model.ReadMarkDownAsync(Model.AppInfo.Name + "/p3");
}

<section class="u-content-space-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center mb-5 mb-lg-0 pr-lg-5">
                <div class="mb-5">
                    <markdown markdown=@ViewData["P1"]></markdown>
                    <a type="button" href="/@Model.AppInfo.Name/downloads" class="btn btn-block btn-lg btn-outline-primary">Download @Model.AppInfo.Fullname for Free</a>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="u-device mx-auto">
                    <figure class="u-device__item">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 603 892" style="enable-background:new 0 0 603 892;" xml:space="preserve">
                            <path id="BG_Color" style="fill: #000;" d="M603,51.8v788.5c0,28.5-23.3,51.8-51.8,51.8H51.8C23.3,892,0,868.7,0,840.2L0,51.8C0,23.3,23.3,0,51.8,0l499.5,0C579.7,0,603,23.3,603,51.8z" />
                            <circle id="tabletFrameTouchID1" style="fill: #f7f7f7;" cx="302.5" cy="846.5" r="25.5" />
                            <circle id="tabletFrameCameraID1" style="fill: #f7f7f7;" cx="301.8" cy="45.9" r="6.2" />
                            <g>
                                <defs>
                                    <rect id="tabletFrameID1" x="36" y="86" width="533" height="711" />
                                </defs>
                                <clipPath id="tabletFrameID2">
                                    <use xlink:href="#tabletFrameID1" style="overflow:visible;" />
                                </clipPath>
                                <g style="clip-path:url(#tabletFrameID2);">
                                    <image style="overflow:visible;" width="533" height="940" xlink:href="/@Model.AppInfo.Name/@(Model.AppInfo.Name)1.png" transform="matrix(1 0 0 1 36 56)"></image>
                                </g>
                            </g>
                        </svg>
                    </figure>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-light u-content-space">

    <a class="anchor" id="download"></a>
    @await Html.PartialAsync("DownloadInfo")

</section>

